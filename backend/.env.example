# OmniDev Backend Environment Variables

# Application Settings
APP_ENV=development
APP_SECRET_KEY=change-me-in-production
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Supabase Authentication
# Get this from: Supabase Dashboard > Project Settings > API > JWT Secret
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# API Key Security
# Generate a random string for production (e.g., openssl rand -hex 32)
API_KEY_SALT=change-me-in-production

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=ap-south-1

# Email Service (Optional)
RESEND_API_KEY=your-resend-api-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=30
RATE_LIMIT_BLOCK_SECONDS=60

# Scraper Configuration (Optional)
SCRAPER_ALLOWED_DOMAINS=
SCRAPER_BLOCKED_DOMAINS=
SCRAPER_RESPECT_ROBOTS=true
